	body.nav-md
		.container.body
			.main_container
				include header
				.right_col(role="main")
					form.form-post(method="POST", action="/savenews/"+data.name, enctype="multipart/form-data")
						.form-group
							label Title Post
							input.form-control(name="Title" placeholder="Title", value=data.title)
						.form-group
							label Mô Tả
							textarea#ckeditor.form-control(name="Desc")=data.desc
						.form-group
							label Mô Tả	Ngắn
							textarea.form-control(name="SDesc")=data.sdesc
						.form-group
							p.btn-file Thêm ảnh đại Diện
							input.filehidden(name="imgUploader" type="file" , value=data.img)
						.form-group
							button.btn.btn-primary(type="submit") Thêm mới
					script(src="../ckeditor/ckeditor.js")
					script.
						CKEDITOR.replace("ckeditor",{
							"extraPlugins" : "imagebrowser",
							"imageBrowser_listUrl":"/editor-img"
						})
				include footer
